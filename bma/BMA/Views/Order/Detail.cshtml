@using System.Globalization
@using BMA.Common
@using BMA.Models
@model BMA.Models.ViewModel.OrderViewModel
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}
<div id="loading-background" style="display: none;"></div>
<img src="~/Content/Images/ajax-loader.gif" id="loading-indicator" style="display: none" />

<script type="text/javascript">
    $(document).ajaxSend(function (event, request, settings) {
        $('#loading-indicator').show();
        $('#loading-background').show();
    });

    $(document).ajaxComplete(function (event, request, settings) {
        $('#loading-indicator').hide();
        $('#loading-background').hide();
    });
</script>

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Chi tiết đơn hàng</h1>
</section>
<section class="invoice">
    <!--Title row-->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-navicon" style="margin-right: 3px;"></i>
                Thông tin đơn hàng
            </h2>
        </div>
    </div>
    <!-- Info row -->
    <div class="row invoice-info">
        <div class="col-md-6 invoice-col">
            <div class="row" style="margin-left: 1px; margin-bottom: 10px">
                Mã đơn hàng: <b style="font-size: 17px;">@Model.Order.OrderCode</b>
            </div>
            @if (Model.Order.OrderStatus != 4 && Model.Order.OrderStatus != 5 && Model.Order.OrderStatus != 6)
            {

                <div class="row" style="margin-left: 1px;">
                    <b>Thời gian giao hàng dự kiến: </b>
                    @(Model.Order.PlanDeliveryTime.ToString("dd/MM/yyyy HH:mm"))
                </div>
            }
            @if (Model.Order.OrderStatus >= 2 && Model.Order.StaffApproveUserId != null)
            {
                <div class="row" style="margin-left: 1px;">
                    <b>Người duyệt: </b>
                    @(Model.Order.User1.Fullname)
                </div>
            }
            @if (Model.Order.OrderNote != null && Model.Order.OrderNote.Trim() != "")
            {
                <div class="row" style="margin-left: 1px;">
                    <b>Ghi chú: </b>
                    @(Model.Order.OrderNote)
                </div>
            }

            @if (Model.Order.OrderStatus == 6)
            {
                <div class="row" style="margin-left: 1px;">
                    <b>Người hủy: </b>
                    @(Model.Order.User2.Fullname)
                </div>
            }
            <div class="row" style="vertical-align: middle; margin-left: 1px;">
                <b>Trạng thái: </b>
                <!--Đã hoàn thành-->
                @if (Model.Order.OrderStatus == 5)
                {
                    <span class="label label-success">@CommonData.Status[Model.Order.OrderStatus]</span>
                    <button class="btn btn-info btn-xs" onclick="openExportInNewTab()">
                        Xem hóa đơn xuất
                        <script type="text/javascript">
                            function openExportInNewTab() {
                                var win = window.open("@(Url.Action("ExportBill", "Order", new {orderId = Model.Order.OrderId}))", '_blank');
                                win.focus();
                            }
                        </script>
                    </button>
                }
                <!--Hủy-->
                @if (Model.Order.OrderStatus == 6)
                {
                    <span class="label label-default">@CommonData.Status[Model.Order.OrderStatus]</span>
                }
                <!--Chờ xử lý-->
                @if (Model.Order.OrderStatus == 0)
                {
                    <span class="label label-danger">@CommonData.Status[Model.Order.OrderStatus]</span>

                }

                <!--Chờ xác nhận-->
                @if (Model.Order.OrderStatus == 1)
                {
                    <span class="label label-warning">@CommonData.Status[Model.Order.OrderStatus]</span>

                }
                <!--Đã duyệt!Đang sản xuất|Đang giao hàng-->
                @if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3 || Model.Order.OrderStatus == 4)
                {

                    if (Model.Order.OrderStatus == 2)
                    {
                        <span class="label label-primary">@CommonData.Status[Model.Order.OrderStatus]</span>
                    }
                    if (Model.Order.OrderStatus == 3 || Model.Order.OrderStatus == 4)
                    {
                        <span class="label label-info">@CommonData.Status[Model.Order.OrderStatus]</span>
                    }
                    if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3)
                    {
                        <button class="btn btn-success btn-xs" id="changeOrderStatus" onclick="openChangeOrderStatePopup(@Model.Order.OrderId, @Model.Order.OrderStatus)">
                            <i class="fa fa-edit"></i>
                            Thay đổi
                        </button>
                    }
                    if (Model.Order.OrderStatus == 4)
                    {
                        <button class="btn btn-success btn-xs" id="changeOrderStatus" onclick="openChangeOrderStatePopup(@Model.Order.OrderId, @Model.Order.OrderStatus)">
                            <i class="fa fa-edit"></i>
                            Thay đổi
                        </button>
                        <button class="btn btn-info btn-xs" onclick="openExportInNewTab()">
                            Xem hóa đơn xuất
                            <script type="text/javascript">
                                function openExportInNewTab() {
                                    var win = window.open("@(Url.Action("ExportBill", "Order", new {orderId = Model.Order.OrderId}))", '_blank');
                                    win.focus();
                                }
                            </script>
                        </button>
                    }
                    <script type="text/javascript">
                        function openChangeOrderStatePopup(orderId, orderStatus) {
                            var nextState;
                            if (orderStatus === 2) {
                                nextState = $("<span>", {
                                    "class": "label label-info",
                                    "html": "Đang sản xuất"
                                });
                            }
                            if (orderStatus === 3) {
                                nextState = $("<span>", {
                                    "class": "label label-info",
                                    "html": "Đang giao hàng"
                                });
                            }
                            if (orderStatus === 4) {
                                nextState = $("<span>", {
                                    "class": "label label-success",
                                    "html": "Đã hoàn thành"
                                });
                            }
                            var message = $("<div>", {
                                "class": "row",
                                "style": "padding: 0px 10px",
                                "html": [
                                    "Bạn có muốn thay đổi trạng thái hóa đơn thành ",
                                    nextState,
                                    " không ?"
                                ]
                            });
                            var footer = $("<div>", {
                                "class": "row",
                                "style": "padding: 0px 10px",
                                "html": [
                                    $("<button>", {
                                        "class": "btn btn-danger",
                                        "data-dismiss": "modal",
                                        "html": "Hủy"
                                    }),
                                    $("<button>", {
                                        "class": "btn btn-success pull-right",
                                        "onclick": 'changeOrderState(' + orderId + ',' + orderStatus + ')',
                                        "html": "Đồng ý"
                                    })
                                ]
                            });


                            var title = 'Thay đổi trạng thái đơn hàng';
                            document.getElementById('popup-body').innerHTML = message[0].outerHTML;
                            document.getElementById('popup-title').innerHTML = title;
                            document.getElementById('popup-footer').innerHTML = footer[0].outerHTML;
                            $('#myModal').modal('show');
                        }

                        function changeOrderState(orderId, orderStatus) {

                            $.ajax({
                                "url": "@(Url.Action("ChangeOrderState", "Order"))",
                                "method": "POST",
                                "data": {
                                    "orderId": orderId
                                },
                                "success": function (data) {
                                    if (data === "1") {
                                        $('#myModal').modal('hide');
                                        if (orderStatus !== 3) {
                                            var n = noty({
                                                text: 'Thay đổi trạng thái đơn hàng thành công',
                                                type: 'success',
                                                dismissQueue: false,
                                                layout: 'topCenter',
                                                theme: 'defaultTheme',
                                                timeout: 1500
                                            });
                                            window.setTimeout(function () {
                                                location.reload();
                                            }, 4000);
                                        }
                                        if (orderStatus === 3) {
                                            $("#changeOrderStatus").attr("onclick", "");

                                            var n = noty({
                                                text: 'Bạn có muốn xuất hóa đơn không ?',
                                                buttons: [
                                                    {
                                                        addClass: 'btn btn-danger btn-xs',
                                                        text: 'Không',
                                                        onClick: function ($noty) {
                                                            $noty.close();
                                                            location.reload();
                                                        }
                                                    },
                                                    {
                                                        addClass: 'btn btn-primary btn-xs pull-right',
                                                        text: 'Có',
                                                        onClick: function ($noty) {
                                                            $noty.close();
                                                            location.reload();
                                                            var win = window.open("@(Url.Action("ExportBill", "Order", new {orderId = Model.Order.OrderId}))", '_blank');
                                                            win.focus();
                                                        }
                                                    }
                                                ],
                                                type: 'success',
                                                dismissQueue: false,
                                                layout: 'topCenter',
                                                theme: 'defaultTheme'
                                            });
                                        }
                                    } else {
                                        $('#myModal').modal('hide');
                                        var n = noty({
                                            text: 'Không thể thay đổi trạng thái đơn hàng',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 2000
                                        });
                                    }

                                },
                                "fail": function (e) {
                                    $('#myModal').modal('hide');
                                    var n = noty({
                                        text: 'Đã có lỗi xảy ra',
                                        type: 'error',
                                        dismissQueue: false,
                                        layout: 'topCenter',
                                        theme: 'defaultTheme',
                                        timeout: 2000
                                    });
                                }
                            });
                        }
                    </script>
                }
            </div>

            <!--All about money-->
            @if (Model.Order.OrderStatus != 0 && Model.Order.OrderStatus != 1)
            {
                <div class="row" style="margin-left: 1px; margin-top: 10px">
                    <div class="col-md-3" style="padding-left: 0">
                        <b>Tiền cọc: </b>
                    </div>
                    <div class="col-md-3" style="text-align: right">
                        @(Model.Order.DepositAmount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")))
                    </div>
                </div>
            }
            <!--Money left-->
            @if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3 || Model.Order.OrderStatus == 4)
            {
                <div class="row" style="margin-left: 1px;">
                    <div class="col-md-3" style="padding-left: 0">
                        <b>Số tiền còn lại: </b>
                    </div>
                    <div class="col-md-3" style="text-align: right">
                        @((Model.Order.Amount + Model.Order.TaxAmount - Model.Order.DiscountAmount - Model.Order.DepositAmount).ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")))
                    </div>
                </div>
            }
            @if (Model.Order.OrderStatus == 6)
            {
                <div class="row" style="margin-left: 1px;">
                    <div class="col-md-3" style="padding-left: 0">
                        <b>Tiền cọc hoàn trả: </b>
                    </div>
                    <div class="col-md-3" style="text-align: right">
                        @(Model.Order.ReturnDeposit.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")))
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6 invoice-col">
            @if (!Model.IsGuest)
            {
                <div style="margin-bottom: 10px;">
                    Thành viên:
                    <b style="font-size: 17px;">@Model.OrderPersonName</b>
                    @if (Model.IsLoyal)
                    {
                        <span><img src="~/Content/AdminLayout/dist/img/VipIcon.gif" /></span>
                    }
                </div>
                <div><b>Địa chỉ: </b>@Model.OrderPersonAddress</div>
                <div><b>Điện thoại: </b>@Model.OrderPersonPhoneNumber</div>
                <div><b>Mã số thuế: </b>@Model.OrderPersonTaxCode</div>
            }
            else
            {
                <div style="margin-bottom: 10px;">
                    Khách hàng:
                    <b style="font-size: 17px">@Model.OrderPersonName</b>
                </div>
                <div style="word-wrap: break-word"><b>Địa chỉ: </b>@Model.OrderPersonAddress</div>
                <div><b>Điện thoại: </b>@Model.OrderPersonPhoneNumber</div>
            }
        </div>
    </div>

    <!--Timeslide-->
    <div class="row" style="margin: 30px 1px 35px">
        <div id="timeslide">

        </div>
    </div>
    <!-- Product detail-->
    <div class="row" style="margin-top: 15px;">
        <div class="col-xs-12">
            <h2 class="page-header">
                <i class="fa fa-shopping-cart" style="margin-right: 3px;"></i>
                Thông tin sản phẩm
            </h2>
        </div>
    </div>
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead style="font-weight: bold">
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th style="text-align: right">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Order.OrderItems.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.Order.OrderItems.ElementAt(i).Product.ProductName</td>
                            <td>@Model.Order.OrderItems.ElementAt(i).RealPrice.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                            <td>@Model.Order.OrderItems.ElementAt(i).Quantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                            <td style="text-align: right">@Model.Order.OrderItems.ElementAt(i).Amount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8"></div>
        <div class=" col-md-4">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Tổng cộng: </th>
                        <td style="text-align: right">
                            @Model.Order.Amount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))
                        </td>
                    </tr>
                    <tr>
                        <th>Giảm: </th>
                        <td style="text-align: right">@Model.Order.DiscountAmount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                    </tr>
                    <tr>
                        <th>Sau giảm giá: </th>
                        <td style="text-align: right">@((Model.Order.Amount - Model.Order.DiscountAmount).ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")))</td>
                    </tr>
                    <tr>
                        <th>Thuế(GTGT) @(ViewBag.TaxRate)%: </th>
                        <td style="text-align: right">@Model.Order.TaxAmount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                    </tr>

                    <tr>
                        <th>Thành tiền: </th>
                        <td style="text-align: right">@((Model.Order.Amount + Model.Order.TaxAmount - Model.Order.DiscountAmount).ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN")))</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Order.OrderStatus == 0)
    {
        if (Model.Order.GuestInfo == null)
        {
        <!--Edit button-->
            <div class="row">
                <div class="col-xs-12">
                    <a class="btn btn-primary pull-right" style="margin-right: 25px;" href="@(Url.Action("Edit", "Order", new {id = Model.Order.OrderId}))">
                        <i class="fa fa-edit" style="margin-right: 3px;"></i>Chỉnh sửa
                    </a>
                </div>
            </div>
        }

    <!-- Material detail-->
    <!-- Material Table Header-->
        <div class="row" style="margin-top: 15px;">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-cubes" style="margin-right: 3px;"></i>
                    Thông tin nguyên liệu
                </h2>
            </div>
        </div>
    <!-- Material Table Content-->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead style="font-weight: bold">
                        <tr>
                            <th>STT</th>
                            <th>Tên nguyên liệu</th>
                            <th>Số lượng cần</th>
                            <th>Số lượng trong kho</th>
                            <th>Tình trạng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.MaterialList.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>
                                    @Model.MaterialList[i].ProductMaterialName

                                </td>
                                <td>@Model.MaterialList[i].NeedQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @Model.MaterialList[i].Unit</td>
                                <td>@Model.MaterialList[i].StorageQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @Model.MaterialList[i].Unit</td>
                                @if (Model.MaterialList[i].IsEnough)
                                {
                                    <td>
                                        <span class="label label-success">Đủ</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="label label-danger">Thiếu</span>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row" style="padding-bottom: 20px;">
            <div class="col-xs-12">
                <h2 class="label label-info" style="font-size: 12pt">Chi phí nguyên liệu: @Model.MaterialCost.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</h2>
            </div>
        </div>
    }
    else
    {


        if (Model.Order.OrderItems.ElementAt(0).OutputMaterials.Count > 0)
        {
            <!-- Material detail-->
            <!-- Material Table Header-->
            <div class="row" style="margin-top: 15px;">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-cubes" style="margin-right: 3px;"></i>
                        Thông tin nguyên liệu
                    </h2>
                </div>
            </div>
            <!-- Material Table Content-->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Tên nguyên liệu</th>
                                <th>Số lượng</th>
                                <th>Xuất</th>
                                @if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3)
                                {
                                    <th></th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orderItem in Model.Order.OrderItems)
                            {
                                <tr>
                                    <td rowspan="@(orderItem.OutputMaterials.Count)">@(orderItem.Product.ProductName)</td>
                                    <td>@(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialName)</td>
                                    <td>@(orderItem.OutputMaterials.ElementAt(0).ExportQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN"))) @(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialUnit)</td>
                                    <td>
                                        @foreach (ExportFrom exportFrom in orderItem.OutputMaterials.ElementAt(0).ExportFroms)
                                        {
                                            <div class="row" style="margin-top:5px">
                                                <div class="col-md-8">
                                                    Từ hóa đơn @(exportFrom.InputBill.InputBillCode) số lượng @(exportFrom.ExportFromQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN"))) @(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialUnit)
                                                </div>
                                                <div class="col-md-4">
                                                    <span>
                                                        <a class="btn btn-info btn-xs pull-right" href="@(Url.Action("InputBillDetail","InputBill", new{id=exportFrom.InputbillId}))">Chi tiết hóa đơn</a>
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                    @if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3)
                                    {
                                        <td>
                                            <button class="btn btn-primary btn-xs pull-right" onclick="exportMaterialPopup(@(orderItem.OutputMaterials.ElementAt(0).OutputMaterialId),@(orderItem.OutputMaterials.ElementAt(0).ProductMaterialId),'@Html.Raw(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialName)',@(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.CurrentQuantity),'@Html.Raw(orderItem.Product.ProductName)')">Xuất thêm nguyên liệu</button>
                                        </td>
                                    }

                                </tr>
                                for (int i = 1; i < orderItem.OutputMaterials.Count; i++)
                                {
                                    <tr>
                                        <td>@(orderItem.OutputMaterials.ElementAt(i).ProductMaterial.ProductMaterialName)</td>
                                        <td>@(orderItem.OutputMaterials.ElementAt(i).ExportQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN"))) @(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialUnit)</td>
                                        <td>
                                            @foreach (ExportFrom exportFrom in orderItem.OutputMaterials.ElementAt(i).ExportFroms)
                                            {
                                                <div class="row" style="margin-top:5px">
                                                    <div class="col-md-8">
                                                        Từ hóa đơn @(exportFrom.InputBill.InputBillCode) số lượng @(exportFrom.ExportFromQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN"))) @(orderItem.OutputMaterials.ElementAt(0).ProductMaterial.ProductMaterialUnit)
                                                    </div>
                                                    <div class="col-md-4">
                                                        <span>
                                                            <a class="btn btn-info btn-xs pull-right">Chi tiết hóa đơn</a>
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                        </td>
                                        @if (Model.Order.OrderStatus == 2 || Model.Order.OrderStatus == 3)
                                        {
                                            <td>
                                                <button class="btn btn-primary btn-xs pull-right" onclick="exportMaterialPopup(@(orderItem.OutputMaterials.ElementAt(i).OutputMaterialId),@(orderItem.OutputMaterials.ElementAt(i).ProductMaterialId),'@Html.Raw(orderItem.OutputMaterials.ElementAt(i).ProductMaterial.ProductMaterialName)',@(orderItem.OutputMaterials.ElementAt(i).ProductMaterial.CurrentQuantity),'@Html.Raw(orderItem.Product.ProductName)')">Xuất thêm nguyên liệu</button>
                                            </td>
                                        }
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }

    <!--Button-->
    <div class="row">
        <div class="col-xs-12">
            @if (Model.Order.OrderStatus != 5 && Model.Order.OrderStatus != 6)
            {
            <!--Cancel order-->
                <button class="btn btn-danger" onclick="open_cancel_order(@Model.Order.OrderId, @Model.Order.DepositAmount,@(Model.Order.OrderStatus))">
                    <i class="fa fa-close" style="margin-right: 3px;"></i>Hủy đơn hàng
                    <script type="text/javascript">
                        function open_cancel_order(orderId, deposit, orderStatus) {
                            var body2 = $("<form>", {
                                "class": "form-group",
                                "id": "return-deposit-form",
                                "html": [
                                    "Bạn có chắc chắn hủy đơn hàng này không ?",
                                    $("<input>", {
                                        "type": "hidden",
                                        "name": "orderId",
                                        "value": orderId
                                    }),
                                    $("<input>", {
                                        "type": "hidden",
                                        "name": "isReturnDeposit",
                                        "value": "0"
                                    }),
                                    $("<input>", {
                                        "type": "hidden",
                                        "name": "returnDeposit",
                                        "value": "0"
                                    })
                                ]
                            });
                            var body1 = $("<form>", {
                                "class": "form-group",
                                "id": "return-deposit-form",
                                "html": [
                                    $("<div>", {
                                        "class": "form-group",
                                        "html": [
                                            $("<div>", {
                                                "class": "form-group",
                                                "html": [
                                                    "<label>Có hoàn trả tiền cọc không ?</label>",
                                                    $("<input>", {
