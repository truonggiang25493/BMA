                                                                var n = noty({
                                                                    text: 'Số điện thoại này đã có trong hệ thống.',
                                                                    type: 'warning',
                                                                    dismissQueue: false,
                                                                    layout: 'topCenter',
                                                                    theme: 'defaultTheme',
                                                                    timeout: 1000
                                                                });
                                                                $("#customerPhoneNumber").focus();
                                                            } else if (data === '-3') {
                                                                var n = noty({
                                                                    text: 'Có lỗi xảy ra, vui lòng thử lại.',
                                                                    type: 'warning',
                                                                    dismissQueue: false,
                                                                    layout: 'topCenter',
                                                                    theme: 'defaultTheme',
                                                                    timeout: 1000
                                                                });
                                                            } else if (data === '1') {
                                                                var n = noty({
                                                                    text: 'Thay đổi thông tin thành công.',
                                                                    type: 'success',
                                                                    dismissQueue: false,
                                                                    layout: 'topCenter',
                                                                    theme: 'defaultTheme',
                                                                    timeout: 1000
                                                                });
                                                                window.setTimeout(function () {
                                                                    window.location.replace("@(Url.Action("Index", "StoreInfor"))");
                                                                }, 2000);
                                                            }
                                                        },
                                                        fail: function (e) {
                                                            var n = noty({
                                                                text: 'Đã có lỗi xảy ra.',
                                                                type: 'danger',
                                                                dismissQueue: false,
                                                                layout: 'topCenter',
                                                                theme: 'defaultTheme',
                                                                timeout: 1000
                                                            });
                                                        }
                                                    });
                                                }
                                        }
                                    </script>
                                </button>
                            </div>
                        </div>
                    </div>
                }


            </div>
            <div class="col-xs-9" id="add-customer" style="display: none">
                <!--Header-->
                <div class="box">
                    <div class="box-body">
                        <form action="@Url.Action("ChangePassword", "Manage")" id="changePassForm" method="POST">
                            <table class="table">
                                <tr class="row">
                                    <td class="col-xs-3">
                                        <label>Mật khẩu cũ(<span style="color: red">*</span>): </label>
                                    </td>
                                    <td class="col-xs-9">
                                        <input id="InputPasswordCurrent" type="password" class="col-xs-9" name="txtOldPass" required maxlength="32" placeholder="Hãy nhập mật khẩu cũ. Tối đa 32 kí tự" />
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-xs-3">
                                        <label>Mật khẩu mới(<span style="color: red">*</span>): </label>
                                    </td>
                                    <td class="col-xs-9">
                                        <input id="InputPasswordnew" type="password" class="col-xs-9" name="txtNewPass" maxlength="32" required placeholder="Hãy nhập mật khẩu mới. Tối đa 32 kí tự" />
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td class="col-xs-3">
                                        <label>Xác nhận lại(<span style="color: red">*</span>): </label>
                                    </td>
                                    <td class="col-xs-9">
                                        <input id="InputPasswordnewConfirm" type="password" class="col-xs-9" name="txtNewPassConfirm" required maxlength="32" placeholder="Xác nhận lại mật khẩu mới. Tôi đa 32 kí tự" />
                                    </td>
                                </tr>
                                <tr class="row">
                                    <td colspan="2">
