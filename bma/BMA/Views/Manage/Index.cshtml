                                                            dismissQueue: false,
                                                            layout: 'topCenter',
                                                            theme: 'defaultTheme',
                                                            timeout: 2000
                                                        });
                                                    } else if (data === "-3") {
                                                        noty({
                                                            text: 'Mật khẩu mới và mật khẩu xác nhận không trùng khớp.',
                                                            type: 'warning',
                                                            dismissQueue: false,
                                                            layout: 'topCenter',
                                                            theme: 'defaultTheme',
                                                            timeout: 2000
                                                        });
                                                    }
                                                },
