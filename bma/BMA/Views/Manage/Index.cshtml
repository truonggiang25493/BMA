                                                    var n = noty({
                                                        text: 'Đã có lỗi xảy ra',
                                                        type: 'error',
                                                        dismissQueue: false,
                                                        layout: 'bottomRight',
                                                        theme: 'defaultTheme',
                                                        timeout: 2000
                                                    });
                                                }
                                            })
                                        }
                                    }
                                </script>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                function open_choose_customer() {
                    $('#announce').hide();
                    $('#choose-customer').show();
                    $('#add-customer').hide();
                }

                function open_add_customer() {
                    $('#announce').hide();
                    $('#choose-customer').hide();
                    $('#add-customer').show();
                }
            </script>
        </div>
        <div class="box-footer" style="margin-top: 30px">
            <div class="col-xs-12">

                <a class="btn btn-primary" href="@(Url.Action("Add","Order"))">
                    <i class=" fa fa-arrow-left" style="margin-right: 3px;"></i>Quay lại
                </a>

            </div>
        </div>
    </div>



