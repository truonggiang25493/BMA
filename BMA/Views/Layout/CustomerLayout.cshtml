<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/CustomerLayout/CSS/animate.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/owl.carousel.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/photobox.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/responsive.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/revolution-slider.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/CustomerLayout/CSS/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/font-awesome-4.3.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div style=""  class="top-bar">
        <div class="container">
            <div style="padding-bottom:15px;" class="right-bar">
                <ul class="login">
                    <li><i class="fa fa-shopping-cart"></i></li>
                    <li><a href="#"><span>Giỏ Hàng</span></a></li>
                </ul>
                <ul class="login">
                    <li><i class="fa fa-sign-in"></i></li>
                    <li><span>@Html.ActionLink("Đăng Nhập", "Login", "Account")</span></li>
                </ul>
            </div>
        </div>
    </div>
    <header>
        <div class="logo"><a href="index.html"><img style="width:201px;height:65px;margin-left:75px;margin-top:20px;" src="~/Content/Images/BakeryImages/logo.jpg" alt="#" /> </a></div>
        <div class="container">
            <div class="navigation clearfix">
                <div class="menu">
                    <nav class="navbar navbar-default">
                        <div id="navbar" class="navbar-collapse collapse pull-right">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("TRANG CHỦ", "Index", "Home")</li>
                                <li>
                                    <a aria-expanded="true" role="button" data-toggle="dropdown" class="dropdown-toggle" href="#">SẢN PHẨM</a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>@Html.ActionLink("Tất cả", "Index", "Product")</li>
                                        <li>@Html.ActionLink("Bánh ngọt", "Cookie", "Product")</li>
                                        <li>@Html.ActionLink("Bánh mặn", "Saltine", "Product")</li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("QUY TRÌNH ĐẶT HÀNG", "Index", "Procedure")</li>
                                <li>@Html.ActionLink("LIÊN HỆ", "Index", "Contact")</li>                               
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    
    <div>
        @RenderBody()
    </div>

    <footer class="bg-color">
        <div class="lower-footer">
            <p>Bakery Management System - MGV | Copyright 2015</p>
        </div>
    </footer>
    
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.appear.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.mixitup.min.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.photobox.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.themepunch.revolution.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/jquery.themepunch.tools.min.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/Content/CustomerLayout/JS/scripts.js"></script>
</body>
</html>
