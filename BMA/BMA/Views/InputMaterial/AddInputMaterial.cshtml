@using System.Globalization
@using BMA.Common
@using BMA.Models
@model List<ProductMaterial>

@{
    ViewBag.Title = "Thêm nguyên liệu đầu vào";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<section class="content-header">
    <h1 style="margin-top: 1%;text-align: center">Thêm nguyên liệu đầu vào</h1>
</section>
<section>
    <div style="margin-top: 2%">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <form id="add-input-material-form">
                        <div class="box-body box-profile">
                            <!-- Choose product material -->
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Nguyên liệu<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7" id="product-material-info">
                                    <input type="text" name="productMaterialName" id="productMaterialName" readonly style="margin-bottom: 10px; width: 95%" />
                                    <input type="hidden" name="productMaterialId" id="productMaterialId" />
                                    <a class="btn btn-success" id="add-product-material" onclick="open_choose_product_material()">
                                        Chọn nguyên liệu
                                        <script type="text/javascript">
                                            function open_choose_product_material() {
                                                $.ajax({
                                                    url: "@(Url.Action("GetProductMaterialList", "InputMaterial"))",
                                                    method: "POST",
                                                    success: function (data) {
                                                        var chooseButton = $("<button>", {
                                                            "class": "btn btn-success",
                                                            "onclick": "choose_product_material()",
                                                            "html": "Chọn nguyên liệu"
                                                        });
                                                        document.getElementById('popup-body').innerHTML = data;
                                                        document.getElementById('popup-footer').innerHTML = chooseButton[0].outerHTML;
                                                        $('#myModal').modal('show');
                                                    }
                                                });
                                            }

                                            function choose_product_material() {
                                                var productMaterialName = $("[data-role=product-material] tr.selected td:first span").html();
                                                var productMaterialId = $("[data-role=product-material] tr.selected td:first input").val();

                                                $("#productMaterialName").val(productMaterialName);
                                                $("#productMaterialId").val(productMaterialId);
                                                $('#myModal').modal('hide');
                                            }
                                        </script>
                                    </a>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Số lượng<b style="color: #ff0000">*</b>: </b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="number" name="txtImportQuantity" id="txtImportQuantity" oninput="maxLengthCheck(this)" maxlength="6" min="1" max="999999" style="width: 95%" placeholder="nhập số từ 1-6 chữ số" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Tổng giá<b style="color: #ff0000">*</b>: </b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="number" name="txtInputMaterialPrice" id="txtInputMaterialPrice" required oninput="maxLengthCheck(this)" maxlength="7" min="1" max="9999999" style="width: 95%" placeholder="nhập số từ 1-7 chữ số" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Ngày nhập<b style="color: #ff0000">*</b>: </b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="date" required min="2015-01-01" max="2020-12-31" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="txtImportDate" id="txtImportDate" style="width: 95%" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Ngày hết hạn<b style="color: #ff0000">*</b>: </b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="date" required min="2015-01-01" max="2020-12-31" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="txtInputMaterialExpiryDate" id="txtInputMaterialExpiryDate" style="width: 95%" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Ghi chú: </b>
                                </div>
                                <div class="col-xs-7">
                                    <textarea name="txtInputMaterialNote" id="txtInputMaterialNote" maxlength="200" rows="3" style="width: 95%"></textarea>
                                </div>
                            </div>
                            <!-- Choose input bill -->
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Mã hóa đơn<b style="color: #ff0000">*</b>: </b>
                                </div>
                                <div class="col-xs-7" id="order-info">
                                    <input type="text" name="inputBillCode" id="inputBillCode" readonly style="margin-bottom: 10px; width: 95%" />
                                    <input type="hidden" name="inputBillId" id="inputBillId" />
                                    <a class="btn btn-success" id="add-bill" onclick="open_choose_bill()">
                                        Chọn hóa đơn
                                        <script type="text/javascript">
                                            function open_choose_bill() {
                                                $.ajax({
                                                    url: "@(Url.Action("GetInputBillList", "InputMaterial"))",
                                                    method: "POST",
                                                    success: function (data) {
                                                        var chooseButton = $("<button>", {
                                                            "class": "btn btn-success",
                                                            "onclick": "choose_bill()",
                                                            "html": "Chọn hóa đơn"
                                                        });
                                                        document.getElementById('standard-popup-body').innerHTML = data;
                                                        document.getElementById('standard-popup-footer').innerHTML = chooseButton[0].outerHTML;
                                                        $('#myStandardModal').modal('show');
                                                    }
                                                });
                                            }

                                            function choose_bill() {
                                                var billCode = $("[data-role=input-bill] tr.selected td:first span").html();
                                                var billId = $("[data-role=input-bill] tr.selected td:first input").val();

                                                $("#inputBillCode").val(billCode);
                                                $("#inputBillId").val(billId);
                                                $('#myStandardModal').modal('hide');
                                            }
                                        </script>
                                    </a>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-12">
                                    <b><b style="color: #ff0000">*</b>: Thông tin bắt buộc</b>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <!-- "Thêm mới" button -->
                <button class="btn btn-primary pull-right" style="margin-right: 2%; margin-bottom: 2%" onclick="addInputMaterial()">
                    <i class="fa fa-edit" style="margin-right: 1%;"></i>Thêm mới
                    <script type="text/javascript">
                        function addInputMaterial() {
                            var productMaterialName = $("#productMaterialName").val();
                            var txtImportQuantity = $("#txtImportQuantity").val();
                            var txtInputMaterialPrice = $("#txtInputMaterialPrice").val();
                            var txtImportDate = $("#txtImportDate").val();
                            var txtInputMaterialExpiryDate = $("#txtInputMaterialExpiryDate").val();
                            var inputBillCode = $("#inputBillCode").val();

                            if (productMaterialName.trim() === '') {
                                noty({
                                    text: 'Tên nguyên liệu đầu vào không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (isNaN(txtImportQuantity)) {
                                noty({
                                    text: 'Số lượng nguyên liệu đầu vào phải là số.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (txtImportQuantity.trim() === '') {
                                noty({
                                    text: 'Số lượng nguyên liệu đầu vào không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (isNaN(txtInputMaterialPrice)) {
                                noty({
                                    text: 'Tổng giá nguyên liệu đầu vào phải là số.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (txtInputMaterialPrice.trim() === '') {
                                noty({
                                    text: 'Tổng giá nguyên liệu đầu vào không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (txtImportDate.trim() === '') {
                                noty({
                                    text: 'Ngày nhập nguyên liệu không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (txtInputMaterialExpiryDate.trim() === '') {
                                noty({
                                    text: 'Ngày hết hạn nguyên liệu không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else if (inputBillCode.trim() === '') {
                                noty({
                                    text: 'Hóa đơn nhập không được trống.',
                                    type: 'warning',
                                    dismissQueue: false,
                                    layout: 'bottomLeft',
                                    theme: 'defaultTheme',
                                    timeout: 1000
                                });
                            } else {
                                $.ajax({
                                    url: "@(Url.Action("AddInputMaterial", "InputMaterial"))",
                                    method: "POST",
                                    data: $("#add-input-material-form").serialize(),
                                    success: function (data) {
                                        if (data === "1") {
                                            noty({
                                                text: 'Thêm nguyên liệu thành công',
                                                type: 'success',
                                                dismissQueue: false,
                                                layout: 'bottomLeft',
                                                theme: 'defaultTheme',
                                                timeout: 1500
                                            });
                                            window.setTimeout(function () {
                                                window.location.replace("@(Url.Action("InputMaterialIndex", "InputMaterial"))");
                                            }, 4000);
                                        } else {
                                            noty({
                                                text: 'Không thể thêm nguyên liệu đầu vào',
                                                type: 'warning',
                                                dismissQueue: false,
                                                layout: 'bottomLeft',
                                                theme: 'defaultTheme',
                                                timeout: 1000
                                            });
                                        }
                                    },
                                    fail: function () {
                                        noty({
                                            text: 'Đã có lỗi xảy ra',
                                            type: 'error',
                                            dismissQueue: false,
                                            layout: 'bottomLeft',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    }
                                });
                            }
                        }
                    </script>
                </button>
                <!-- "Hủy" button -->
                <button class="btn btn-success" style="margin-left: 2%; margin-bottom: 2%;" onclick="cancelAddInputMaterial()">
                    <i class="fa fa-arrow-left" style="margin-right: 1%;"></i>Quay lại trang danh sách
                    <script type="text/javascript">
                        function cancelAddInputMaterial() {
                            window.location.replace("@(Url.Action("InputMaterialIndex", "InputMaterial"))");
                        }
                    </script>
                </button>
            </div>
        </div>
    </div>
    <!--max length for number-->
    <script>
        function maxLengthCheck(object) {
            if (object.value.length > object.maxLength)
                object.value = object.value.slice(0, object.maxLength);
        }
    </script>
</section>
@section AddInputMaterialScript{
    <script type="text/javascript">
        $(document).on("keyup", "#txtImportDate", function () {
            var txtImportDate = new Date($('#txtImportDate').val());
            var minDate = txtImportDate.getFullYear() + '-' + txtImportDate.getMonth() + '-' + ((txtImportDate.getDate() + 1).toString().length > 1 ? (txtImportDate.getDate() + 1) : ('0' + (txtImportDate.getDate() + 1).toString()));
            $('#txtInputMaterialExpiryDate').val(minDate);
            $('#txtInputMaterialExpiryDate').attr('min', minDate);
        })
    </script>
}