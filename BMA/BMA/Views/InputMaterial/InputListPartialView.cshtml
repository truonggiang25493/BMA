@using BMA.Models
@model List<BMA.Models.InputBill>

<h3>Danh sách hóa đơn</h3>

<div class="box-body">
    <table id="example" data-role="input-bill" class="table table-bordered customer-table">
        <thead style="font-weight: bold">
            <tr>

                <th>Mã hóa đơn</th>
                <th>Nhà cung cấp</th>
                <th>Ngày nhập</th>
            </tr>
        </thead>
        <tbody>
            @foreach (InputBill inputBill in Model)
            {
                <tr>
                    <td>
                        <span>@(inputBill.InputBillCode)</span>
                        <input type="hidden" name="txtInputBillId" value="@inputBill.InputBillId" />
                    </td>
                    <td>
                        @(inputBill.Supplier.SupplierName.Length <= 30 ? inputBill.Supplier.SupplierName : inputBill.Supplier.SupplierName.Substring(0, 26) + "...")
                    </td>
                    <td>
                        @(inputBill.ImportDate.ToString("dd/MM/yyyy"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable({
            "iDisplayLength": 5,
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": false,
            "info": true,
            "autoWidth": false
        });
    });
</script>