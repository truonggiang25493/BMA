@using System.Globalization
@using BMA.Models
@model BMA.Models.InputMaterial



@{
    ViewBag.Title = "Chi tiết nguyên liệu đầu vào";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1 class="fa fa-flask">Chi tiết nguyên liệu đầu vào</h1>
</section>
<section class="content">
    <!--Title row-->
    <form id="edit-input-material-form"></form>
    <div class="row">
        <!-- Info row -->
        <div class="col-md-4">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <h3 class="profile-username text-center">
                        @Model.ProductMaterial.ProductMaterialName
                    </h3>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Số lượng nhập: </b>
                            <a class="pull-right">@Model.ImportQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @Model.ProductMaterial.ProductMaterialUnit</a>
                        </li>
                        <li class="list-group-item">
                            <b>Số lượng tồn kho: </b>
                            <a class="pull-right">@Model.RemainQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @Model.ProductMaterial.ProductMaterialUnit</a>
                        </li>
                        <li class="list-group-item">
                            <b>Giá nhập kho: </b>
                            <a class="pull-right">@Model.InputMaterialPrice.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))/@Model.ProductMaterial.ProductMaterialUnit</a>
                        </li>
                        <li class="list-group-item">
                            <b>Ngày nhập kho: </b>
                            <a class="pull-right">@Model.ImportDate.ToString("dd/MM/yyyy")</a>
                        </li>
                        <li class="list-group-item">
                            <b>Ngày hết hạn: </b>
                            <a class="pull-right">@Model.InputMaterialExpiryDate.ToString(("dd/MM/yyyy"))</a>
                        </li>
                        <li class="list-group-item">
                            <b>Mã hóa đơn: </b>
                            <a class="pull-right">@Model.InputBill.InputBillCode</a>
                        </li>
                        <li class="list-group-item">
                            <b>Trạng thái: </b>
                            @if (Model.RemainQuantity == 0)
                            {
                                <span class="label label-default">Đã hết</span>
                            }
                            else if (Model.IsActive)
                            {
                                {
                                    <span class="label label-success">Có thể sử dụng</span>
                                }
                            }
                            else
                            {
                                <span class="label label-danger">Đã hủy</span>
                            }
                        </li>
                    </ul>
                    <!-- Trường hợp còn nguyên liệu và trạng thái active mới hiện button -->
                    @if (Model.IsActive && Model.RemainQuantity != 0)
                    {
                        <div class="row">
                            <!-- Change stage button -->
                            <div class="col-xs-12" style="text-align: center">
                                <button class="btn btn-success" id="btn-approved" onclick="open_container(@(Model.InputMaterialId));">

                                    <i class="fa fa-check-square-o" style="margin-right: 5%;"></i>Thay đổi trạng thái
                                    <script type="text/javascript">
                                        function open_container(id) {
                                            var content = 'Bạn có muốn chuyển nguyên liệu từ trạng thái' + '@(Model.IsActive ? " đang sử dụng " : " đã hủy ")' + 'sang trạng thái' + '@(Model.IsActive ? " đã hủy " : " đang sử dụng ")' + 'không?';
                                            var title = 'Thay đổi trạng thái nguyên liệu';
                                            var footer = $("<div>", {
                                                "class": "row",
                                                "html": [
                                                    $("<button>", {
                                                        "class": "btn btn-success pull-right",
                                                        "style": "margin-right: 30%;",
                                                        "onclick": "change_input_material_stage(" + id + ")",
                                                        "html": "Đồng ý"
                                                    }),
                                                    $("<button>", {
                                                        "class": "btn btn-danger",
                                                        "style": "margin-right: 10px;",
                                                        "data-dismiss": "modal",
                                                        "html": "Hủy"
                                                    })
                                                ]
                                            });
                                            setModalBox(title, content, footer[0].outerHTML);
                                            $('#myModal').modal('show');
                                        }

                                        function setModalBox(title, content, footer) {
                                            document.getElementById('popup-body').innerHTML = content;
                                            document.getElementById('popup-title').innerHTML = title;
                                            document.getElementById('popup-footer').innerHTML = footer;
                                        }

                                        function change_input_material_stage(id) {
                                            $.ajax({
                                                "url": "@(Url.Action("ChangeInputMaterialStatus", "InputMaterial"))",
                                                "method": "POST",
                                                "data": {
                                                    "id": id
                                                },
                                                "success": function (data) {
                                                    if (data === "1") {
                                                        $('#myModal').modal('hide');
                                                        window.location.replace("@Url.Action("InputMaterialIndex", "InputMaterial", Model.InputMaterialId)");
                                                    } else {
                                                        alert("Khong the");
                                                    }
                                                },
                                                "fail": function (e) {
                                                    alert("Have error" + e);
                                                }
                                            });
                                        }
                                    </script>
                                </button>

                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-togged="tag" aria-expanded="true" href="#inputBillImage"> Hóa đơn đầu vào</a>
                    </li>
                    <li class="active">
                        <a data-togged="tag" aria-expanded="true" href="#inputMaterialNote"> Ghi chú</a>
                    </li>
                </ul>
                <div class="tab-pane active" id="inputBillImage">
                    <div class="post">
                        <p>
                            <img src="~/content/images/inputbill/inputbill.jpg" width="400" height="600" />
                        </p>
                    </div>
                </div>
                <div class="tab-pane active" id="inputMaterialNote">
                    <div class="post">
                        <p>
                            @if (Model.InputMaterialNote == null)
                            {
                                <a>Không có</a>
                            }
                            else
                            {
                                @Model.InputMaterialNote
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Button-->
    <div class="row">
        <div class="col-xs-12">
            <!-- Edit button -->
            <button class="btn btn-primary pull-right" style="margin-right: 25px;" onclick="editInputMaterial()">
                <i class="fa fa-edit" style="margin-right: 3px;"></i>Chỉnh sửa
                <script type="text/javascript">
                    function editInputMaterial() {
                        window.location.replace("@(Url.Action("EditInputMaterial", "InputMaterial", new {@id = Model.InputMaterialId}))");
                    }
                </script>

            </button>
            <!-- Comeback button -->
            <button class="btn btn-danger" onclick="comebackToIndex()">
                <i class="fa fa-edit" style="margin-left: 10px;"></i>Quay lại
                <script type="text/javascript">
                    function comebackToIndex() {
                        window.location.replace("@(Url.Action("InputMaterialIndex", "InputMaterial"))");
                    }
                </script>
            </button>
        </div>
    </div>
</section>
