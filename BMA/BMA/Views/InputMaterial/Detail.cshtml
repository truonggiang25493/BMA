@using System.Globalization
@model BMA.Models.InputMaterial



@{
    ViewBag.Title = "Chi tiết nguyên liệu đầu vào";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Chi tiết nguyên liệu đầu vào</h1>
</section>
<section class="content">
    <!--Title row-->
    <div class="row">
        <!-- Info row -->
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <h3 class="profile-username text-center">
                        @Model.ProductMaterial.ProductMaterialName
                    </h3>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Số lượng nhập: </b>
                            <a class="pull-right">@Model.ImportQuantity</a>
                        </li>
                        <li class="list-group-item">
                            <b>Số lượng tồn kho: </b>
                            <a class="pull-right">@Model.RemainQuantity</a>
                        </li>
                        <li class="list-group-item">
                            <b>Giá nhập kho: </b>
                            <a class="pull-right">@Model.InputMaterialPrice.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))/@Model.ProductMaterial.ProductMaterialUnit</a>
                        </li>
                        <li class="list-group-item">
                            <b>Ngày nhập kho: </b>
                            <a class="pull-right">@Model.ImportDate.Value.ToShortDateString()</a>
                        </li>
                        <li class="list-group-item">
                            <b>Ngày hết hạn: </b>
                            <a class="pull-right">@Model.InputMaterialExpiryDate.ToString(("dd/MM/yyyy"))</a>
                        </li>
                        <li class="list-group-item">
                            <b>Hóa đơn đầu vào: </b>
                            <a class="pull-right">@Model.InputBill.InputBillCode</a>
                        </li>
                        <li class="list-group-item">
                            <b>Trạng thái: </b>
                            @if (Model.IsActive)
                            {
                                <span class="label label-success">Đang sử dụng</span>
                            }
                            else
                            {
                                <span class="label label-danger">Đã hủy</span>
                            }
                        </li>
                    </ul>
                    <div class="row">
                        <div class="col-xs-12">
                            @if (Model.IsActive)
                            {
                                <button class="btn btn-success pull-right" id="btn-approved" onclick="open_container();">
                                    <i class="fa fa-check-square-o" style="margin-right: 3px;"></i>Thay đổi trạng thái nguyên liệu
                                    <script type="text/javascript">
                                        function open_container() {
                                            var content =
                                                '<form role="form" action="" method="post" id="form-aprrove">' +
                                                    '<div class="form-group">' +
                                                    '<label>Bạn có muốn chuyển nguyên liệu từ trạng thái đang sử dụng sang trạng thái đã hủy không?</label>' +
                                                    '</div>' +
                                                    '<div class="form-group" style="padding-bottom: 20px;">'  +
                                                    '<button type="submit" class="btn btn-success pull-right">Đồng ý</button>' +
                                                    '<button type="button" class="btn btn-danger pull-right" data-dismiss="modal" style="margin-right: 10px;">Hủy</button>' +
                                                    '</div>' +
                                                    '</form>';
                                            var title = 'Thay đổi trạng thái nguyên liệu';
                                            var footer = '';
                                            setModalBox(title, content, footer);
                                            $('#myModal').modal('show');
                                        }

                                        function setModalBox(title, content, footer) {
                                            document.getElementById('popup-body').innerHTML = content;
                                            document.getElementById('popup-title').innerHTML = title;
                                            document.getElementById('popup-footer').innerHTML = footer;

                                        }

                                    </script>
                                </button>
                            }
                            else
                            {

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-togged="tag" aria-expanded="true"> Ghi chú</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="activity">
                        <div class="post">
                            <p>
                                @if (Model.InputMaterialNote == null)
                                {
                                    <a>Không có</a>
                                }
                                else
                                {
                                    @Model.InputMaterialNote
                                }


                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--Button-->
    <div class="row">
        <div class="col-xs-12">
            <button class="btn btn-primary pull-right" style="margin-right: 25px;">
                <i class="fa fa-edit" style="margin-right: 3px;"></i>Chỉnh sửa
            </button>

        </div>
    </div>

</section>
