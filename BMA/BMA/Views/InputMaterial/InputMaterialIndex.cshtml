@using System.Globalization
@using BMA.Common
@using BMA.Models
@model IEnumerable<BMA.Models.InputMaterial>
@{
    ViewBag.Title = "Danh sách nguyên liệu đầu vào";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<section class="content-header">
    <h1>Danh sách nguyên liệu đầu vào</h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <!-- box-body -->
        <div class="box-body">
            <table id="example1" class="table table-hover table-bordered">
                <thead style="font-weight: bold">
                    <tr class="row">

                        <th style="width: 15%">Nguyên liệu</th>
                        <th style="width: 10%">Nhập</th>
                        <th style="width: 10%">Tồn kho</th>
                        <th style="width: 15%">Ngày nhập</th>
                        <th style="width: 15%">Ngày hết hạn</th>
                        <th style="width: 10%">Trạng thái</th>
                        <th style="width: 25%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (InputMaterial inputMaterial in Model)
                    {
                        <tr class="row">

                            <td style="text-align: center; width: 15%">@inputMaterial.ProductMaterial.ProductMaterialName</td>
                            <td style="text-align: right; width: 10%">@inputMaterial.ImportQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @inputMaterial.ProductMaterial.ProductMaterialUnit</td>
                            <td style="text-align: right; width: 10%">@inputMaterial.RemainQuantity.ToString("N0", CultureInfo.CreateSpecificCulture("vi-VN")) @inputMaterial.ProductMaterial.ProductMaterialUnit</td>
                            <td style="text-align: center; width: 15%">@inputMaterial.ImportDate.ToString("dd/MM/yyyy")</td>
                            <td style="text-align: center; width: 15%">@inputMaterial.InputMaterialExpiryDate.ToString("dd/MM/yyyy")</td>

                            @if (DateTime.Compare(inputMaterial.InputMaterialExpiryDate, DateTime.Today) < 1)
                            {
                                <td style="text-align: center; width: 10%">
                                    <span class="label label-danger">Hết hạn sử dụng</span>
                                </td>
                                <td style="width: 25%">
                                    <a class="btn btn-link btn-xs" href="@(Url.Action("InputMaterialDetail", "InputMaterial", new {id = inputMaterial.InputMaterialId}))">
                                        <i class="fa fa-navicon" style="margin-right: 3px"></i>Xem
                                    </a>
                                </td>
                            }
                            else if (inputMaterial.RemainQuantity == 0)
                            {
                                <td style="text-align: center; width: 10%">
                                    <span class="label label-default">Đã hết</span>
                                </td>
                                <td style="width: 25%">
                                    <a class="btn btn-link btn-xs" href="@(Url.Action("InputMaterialDetail", "InputMaterial", new {id = inputMaterial.InputMaterialId}))">
                                        <i class="fa fa-navicon" style="margin-right: 3px"></i>Xem
                                    </a>
                                </td>
                            }
                            else
                            {
                                <td style="text-align: center; width: 10%">
                                    <span class="label label-success">Có thể sử dụng</span>
                                </td>
                                <td style="width: 25%">
                                    <a class="btn btn-link btn-xs" href="@(Url.Action("InputMaterialDetail", "InputMaterial", new {id = inputMaterial.InputMaterialId}))">
                                        <i class="fa fa-navicon" style="margin-right: 3px"></i>Xem
                                    </a>
                                    <a class="btn btn-link btn-xs" href="@(Url.Action("EditInputMaterial", "InputMaterial", new {id = inputMaterial.InputMaterialId}))">
                                        <i class="fa fa-edit" style="margin-right: 3px"></i>Sửa
                                    </a>
                                    <button class="btn btn-link btn-xs" onclick="open_container(@(inputMaterial.InputMaterialId));">
                                        <i class="fa fa-refresh" style="margin-right: 3px"></i>Hủy nguyên liệu
                                        <script type="text/javascript">
                                            function open_container(inputMaterialId, discardQuantity, discardNote) {
                                                var content =
                                                    '<form role="form" action="" method="post" id="discard-form">' +
                                                        '<div class="form-group">' +
                                                        '<label>Số lượng hủy: </label>' +
                                                        '<input type="number" min = "1" oninput="maxLengthCheck(this)" max="@inputMaterial.RemainQuantity" class="form-control" id="price" value="' + discardQuantity + '" name="discardQuantity"/>' +
                                                        '</div>' +
                                                        '<div class="form-group">' +
                                                        '<label>Ghi chú: </label>' +
                                                        '<textarea maxlength="200" rows="3" class="form-control" id="discardNote" value="' + discardNote + '" name="discardNote">' + '</textarea>' +
                                                        '</div>' +
                                                        '</form>';
                                                var title = 'Hủy nguyên liệu';
                                                var footer = $("<div>", {
                                                    "class": "row",
                                                    "html": [
                                                        $("<button>", {
                                                            "class": "btn btn-success pull-right",
                                                            "style": "margin-right: 30%;",
                                                            "onclick": "discard_input_material(" + inputMaterialId + ")",
                                                            "html": "Đồng ý"
                                                        }),
                                                        $("<button>", {
                                                            "class": "btn btn-danger",
                                                            "style": "margin-right: 10px;",
                                                            "data-dismiss": "modal",
                                                            "html": "Hủy"
                                                        })
                                                    ]
                                                });
                                                setModalBox(title, content, footer[0].outerHTML);
                                                $('#myModal').modal('show');
                                            }

                                            function setModalBox(title, content, footer) {
                                                document.getElementById('popup-body').innerHTML = content;
                                                document.getElementById('popup-title').innerHTML = title;
                                                document.getElementById('popup-footer').innerHTML = footer;
                                            }

                                            function discard_input_material(id) {
                                                $.ajax({
                                                    "url": "@(Url.Action("DiscardInputMaterial", "DiscardInputMaterial"))",
                                                    "method": "POST",
                                                    "data": {
                                                        "id": id
                                                    },
                                                    "success": function (data) {
                                                        if (data === "1") {
                                                            $('#myModal').modal('hide');
                                                            window.location.replace("@Url.Action("InputMaterialIndex", "InputMaterial",inputMaterial.InputMaterialId)");
                                                        } else {
                                                            alert("Khong the");
                                                        }
                                                    },
                                                    "fail": function (e) {
                                                        alert("Have error" + e);
                                                    }
                                                });
                                            }
                                        </script>
                                    </button>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <button class="btn btn-bitbucket pull-left" onclick="addNewInputMaterial()">
                <i class="fa fa-edit" style="margin-right: 3px;"></i>Thêm mới
                <script type="text/javascript">
                    function addNewInputMaterial() {
                        window.location.replace("@(Url.Action("AddInputMaterial", "InputMaterial"))");
                    }
                </script>
            </button>
        </div>
    </div>
</section>