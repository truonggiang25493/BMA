@model IEnumerable<BMA.Models.ProductMaterial>

<div class="row" style="margin: 0px 10px">
    <div class="col-xs-12">
        <div class="row">
            <h3>Danh sách nguyên liệu</h3>
        </div>
        <div class="row">
            <form role="form" action="@Url.Action("AddProductMaterial", "ManageProduct")" method="post" id="materialForm">
                <table id="example2" class="table table-bordered customer-table select-popup">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span>@item.ProductMaterialName</span>
                                    <input type="hidden" name="materialId" value="@item.ProductMaterialId" />
                                </td>
                            </tr>
                        }
                        <tr>
                            <td><input type="hidden" name="productId" value="@ViewBag.productId"/></td>
                        </tr>
                    </tbody>
                    
                </table>
            </form>           
        </div>
        <div class="row">
            <button class="btn btn-success pull-right" onclick="fnselect()">
                <i class="fa fa-check" style="margin-right:3px"></i>Chọn
            </button>
        </div>
    </div>
</div>