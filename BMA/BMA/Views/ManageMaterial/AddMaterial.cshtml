@model BMA.Models.ProductMaterial

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}
<section class="content-header">
    <h1>
        Thêm mới nguyên liệu
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin sản phẩm</h3><br/>
                    <label class="box-title" style="color:#ff0000">@TempData["Error"]</label>
                </div><!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="/ManageMaterial/AddMaterial" id="myForm" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên nguyên liệu (*)</label>
                            <input type="text" class="form-control" name="txtName" value="" placeholder="Nhập tên nguyên liệu" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Đơn vị tính (*)</label><br />
                            <input type="text" class="form-control" name="txtUnit" value="" placeholder="Nhập đơn vị" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số lượng (*)</label>
                            <input type="text" class="form-control" name="txtQuantity" value="" placeholder="Nhập số lượng" required>
                        </div>
                    </div><!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-danger" value="AddMaterial">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
