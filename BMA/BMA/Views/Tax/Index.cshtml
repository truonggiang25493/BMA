                                                    var title = "Cập nhật tỉ suất thuế thu nhập doanh nghiệp(TNDN)";
                                                    var body = $("<form>", {
                                                        "id": "changeTndn",
                                                        "class": "form-group",
                                                        "html": [
                                                            $("<div>", {
                                                                "class": "form-group",
