@using System.Globalization
@using BMA.Common
@model List<BMA.Models.Order>
@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Danh sách đơn hàng</h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <!-- box-body -->
        <div class="box-body">
            <table id="example2" class="table table-hover table-bordered">
                <thead style="font-weight: bold">
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Thời gian đơn hàng</th>
                        <th>Tổng giá trị</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].OrderCode</td>
                            <td>@Model[i].CreateTime.ToString("dd/MM/yyyy hh:mm tt")</td>
                            <td style="text-align: right">@Model[i].TotalValue.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>

                            @if (Model[i].OrderStatus==5)
                            {
                                <td>
                                    <span class="label label-success">@CommonData.Status[Model.ElementAt(i).OrderStatus]</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "Detail", new { id = Model[i].OrderId })
                                </td>

                            }
                            else if (Model[i].OrderStatus == 6)
                            {
                                <td>
                                    <span class="label label-danger">@CommonData.Status[Model.ElementAt(i).OrderStatus]</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "Detail", new { id = Model[i].OrderId })
                                </td>

                            }
                            else if (Model[i].OrderStatus == 0)
                            {
                                <td>
                                    <span class="label label-warning">@CommonData.Status[Model.ElementAt(i).OrderStatus]</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "Detail", new { id = Model[i].OrderId })
                                    @Html.ActionLink("Sửa", "Edit", new { id = Model[i].OrderId })
                                    @Html.ActionLink("Hủy", "Delete", new { id = Model[i].OrderId })
                                </td>

                            }
                            else if (Model[i].OrderStatus == 1)
                            {
                                <td>
                                    <span class="label label-warning">@CommonData.Status[Model.ElementAt(i).OrderStatus]</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "Detail", new { id = Model[i].OrderId })
                                    @Html.ActionLink("Hủy", "Delete", new { id = Model[i].OrderId })
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="label label-primary">@CommonData.Status[Model.ElementAt(i).OrderStatus]</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "Detail", new { id = Model[i].OrderId })
                                    @Html.ActionLink("Hủy", "Delete", new { id = Model[i].OrderId })
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>