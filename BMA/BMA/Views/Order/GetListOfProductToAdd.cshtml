@using BMA.Models
@model List<BMA.Models.Product>
<div class="row" style="margin: 0px 10px">
    <div class="col-xs-12">
        <div class="row">
            <h3>Danh sách sản phẩm</h3>
        </div>
        <div class="row">
            <table id="example2" class="table table-bordered multiple-choice-table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model)
                    {
                        <tr>
                            <td>
                                <span>@product.ProductName</span>
                                <input type="hidden" name="productId" value="@(product.ProductId)" />
                            </td>
                            <td>
                                <span>@product.ProductStandardPrice</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row">
            <button class="btn btn-success pull-right" onclick="fnselect()">
                <i class="fa fa-check" style="margin-right: 3px"></i>Chọn
            </button>
        </div>
    </div>

</div>