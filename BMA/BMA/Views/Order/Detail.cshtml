    @{
        string timeslideData = "";
        if (Model.Order.OrderStatus != 6)
        {
            if (Model.Order.OrderStatus >= 0)
            {
                timeslideData += "<b>Tạo</b><br/>" + Model.Order.CreateTime.ToString("dd/MM/yyyy HH:mm");
            }
            if (Model.Order.OrderStatus == 1)
            {

                timeslideData += ";<b>Chờ xác nhận </b>";
            }
            if (Model.Order.OrderStatus >= 2)
            {
                if (Model.Order.ConfirmTime != null)
                {
                    timeslideData += ";<b>Xác nhận</b></br>" + ((DateTime)Model.Order.ConfirmTime).ToString("dd/MM/yyyy HH:mm");
                }
                else
                {
                    timeslideData += ";<b>Duyệt</b><br/>" + ((DateTime)Model.Order.ApproveTime).ToString("dd/MM/yyyy HH:mm");
                }

            }
            if (Model.Order.OrderStatus >= 3)
            {
                timeslideData += ";<b>Sản xuất</b><br/>" + ((DateTime)Model.Order.StartProduceTime).ToString("dd/MM/yyyy HH:mm");
            }
            if (Model.Order.OrderStatus >= 4)
            {
                timeslideData += ";<b>Giao hàng</b><br/>" + ((DateTime)Model.Order.DeliveryTime).ToString("dd/MM/yyyy HH:mm");
            }
            if (Model.Order.OrderStatus == 5)
            {
                timeslideData += ";<b>Hoàn thành</b><br/>" + ((DateTime)Model.Order.FinishTime).ToString("dd/MM/yyyy HH:mm");
            }
        }
    }

    @if (Model.Order.OrderStatus != 6)
    {
        <script type="text/javascript">
            $(document).ready(function() {
                var data = "@(Html.Raw(timeslideData))".split(";");

                $("#timeslide").timeslide({
                    number: 5,
                    completed: (data.length),
                    renderLabel: function(i) {
                        return data[i];
                    }
                });
            });
        </script>
    }
