@using System.Globalization
@using BMA.Common
@using BMA.Models
@model Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Chi tiết đơn hàng</h1>
</section>
<section class="invoice">
    <!--Title row-->
    <div class="row">
        <div class="col-xs-12">
            <h2 class="page-header">
                Thông tin đơn hàng
            </h2>
        </div>
    </div>
    <!-- Info row -->
    <div class="row invoice-info">
        <div class="col-sm-6 invoice-col">
            <b>Mã đơn hàng: </b>
            @Model.OrderCode
            <br />
            <b>Thời gian tạo: </b>
            @Model.CreateTime.ToString(("dd/MM/yyyy hh:mm tt"))
            <br />
            <b>Trạng thái: </b>
            @if (Model.OrderStatus == 5)
            {
                <span class="label label-success">@CommonData.Status[Model.OrderStatus]</span>
            }
            else if (Model.OrderStatus == 6)
            {
                <span class="label label-danger">@CommonData.Status[Model.OrderStatus]</span>
            }
            else if (Model.OrderStatus == 0 || Model.OrderStatus == 1)
            {
                <span class="label label-warning">@CommonData.Status[Model.OrderStatus]</span>
            }
            else
            {
                <span class="label label-primary">@CommonData.Status[Model.OrderStatus]</span>
            }
        </div>
        <div class="col-sm-6 invoice-col">
            @if (!(Model.OrderStatus == 0))
            {
                <div>
                    Thành viên:
                    <b>@Model.AspNetUser.FullName</b>
                </div>
                <div>@ViewBag.Customer.CustomerAddress</div>
                <div>Điện thoại: @ViewBag.Customer.CustomerPhoneNumber</div>
            }
            else if (ViewBag.GuestInfo != null)
            {
                <div>
                    Khách hàng:
                    <b>@ViewBag.GuestInfo.GuestInfoName</b>
                </div>
                <div>@ViewBag.GuestInfo.GuestInfoAddress</div>
                <div>Điện thoại: @ViewBag.GuestInfo.GuestInfoPhone</div>
            }
            else
            {
                <div>
                    Thành viên:
                    <b>@Model.AspNetUser.FullName</b>
                </div>
                <div>@ViewBag.Customer.CustomerAddress</div>
                <div>Điện thoại: @ViewBag.Customer.CustomerPhoneNumber</div>
            }
        </div>
    </div>
    <!-- Product detail-->
    <div class="row" style="margin-top: 15px;">
        <div class="col-xs-12">
            <h2 class="page-header">
                Thông tin sản phẩm
            </h2>
        </div>
    </div>
    <!-- Table row -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead style="font-weight: bold">
                    <tr>
                        <th>STT</th>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th style="text-align: right">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.OrderItems.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model.OrderItems.ElementAt(i).Product.ProductName</td>
                            <td>@Model.OrderItems.ElementAt(i).RealPrice.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                            <td>@Model.OrderItems.ElementAt(i).Quantity</td>
                            <td style="text-align: right">@Model.OrderItems.ElementAt(i).Amount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-9"></div>
        <div class=" col-xs-3">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th>Tổng cộng: </th>
                        <td style="text-align: right">
                            @ViewBag.TotalAmount.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))
                        </td>
                    </tr>
                    <tr>
                        <th>Thuế: </th>
                        <td style="text-align: right">@ViewBag.TotalTax.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                    </tr>
                    <tr>
                        <th>Thành tiền: </th>
                        <td style="text-align: right">@Model.TotalValue.ToString("C0", CultureInfo.CreateSpecificCulture("vi-VN"))</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <!--Button-->

    <div class="row">
        <div class="col-xs-12">
            @if (Model.OrderStatus != 5)
            {
                <button class="btn btn-warning ">
                    <i class="fa fa-close" style="margin-right: 3px;"></i>Hủy
                </button>
            }

            @if (Model.OrderStatus == 0)
            {
                <button class="btn btn-success pull-right" id="btn-approved" onclick="checkMaterial()">
                    <i class="fa fa-check-square-o" style="margin-right: 3px;"></i>Duyệt
                    <script type="text/javascript">

                        function checkMaterial() {
                            if ((@ViewBag.IsEnough)===1) {
                                alert("Đủ");
                            } else {
                                alert("Không đủ");
                            }
                        }

                    </script>

                </button>
                <button class="btn btn-primary pull-right" style="margin-right: 25px;">
                    <i class="fa fa-edit" style="margin-right: 3px;"></i>Chỉnh sửa
                </button>
            }
        </div>
    </div>
    <!-- Material detail-->
    <div class="row" style="margin-top: 15px;">
        <div class="col-xs-12">
            <h2 class="page-header">
                Thông tin nguyên liệu
            </h2>
        </div>
    </div>
    <!-- Material Table -->
    <div class="row">
        <div class="col-xs-12 table-responsive">
            <table class="table table-striped">
                <thead style="font-weight: bold">
                    <tr>
                        <th>STT</th>
                        <th>Tên nguyên liệu</th>
                        <th>Số lượng cần</th>
                        <th>Số lượng trong kho</th>
                        <th>Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < ViewBag.MaterialList.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@ViewBag.MaterialList[i].ProductMaterialName</td>
                            <td>@ViewBag.MaterialList[i].NeedQuantity</td>
                            <td>@ViewBag.MaterialList[i].StorageQuantity</td>
                            @if (ViewBag.MaterialList[i].IsEnough)
                            {
                                <td>
                                    <span class="label label-success">Đủ</span>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="label label-danger">Thiếu</span>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
