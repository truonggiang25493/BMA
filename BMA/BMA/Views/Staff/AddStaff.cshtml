@using BMA.Models
@model List<Staff>

@{
    ViewBag.Title = "Thêm nhân viên mới";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}
<div id="loading-background" style="display:none;"></div>
<img src="~/Content/Images/ajax-loader.gif" id="loading-indicator" style="display:none" />

<script type="text/javascript">
    $(document).ajaxSend(function (event, request, settings) {
        $('#loading-indicator').show();
        $('#loading-background').show();
    });

    $(document).ajaxComplete(function (event, request, settings) {
        $('#loading-indicator').hide();
        $('#loading-background').hide();
    });
</script>
<section class="content-header">
    <h1 style="text-align: center; margin-top: 2%">Thêm nhân viên mới</h1>
</section>
<section>
    <div style="margin-top: 5%">
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <form id="add-staff-form">
                        <div class="box-body box-profile">
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Tên nhân viên<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="text" name="txtStaffName" id="txtStaffName" style="width: 95%" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Tên tài khoản<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7">
                                    <input name="txtStaffUserAccount" id="txtStaffUserAccount" style="width: 95%">
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Số điện thoại<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="text" onkeypress="return event.charCode >= 48 && event.charCode <= 57" name="txtStaffPhoneNumber" id="txtStaffPhoneNumber" style="width: 95%" oninput="maxLengthCheck(this)" maxlength="11" min="1000000" max="99999999999" placeholder="nhập số từ 7-11 chữ số" />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>E-mail<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7">
                                    <input type="email" name="txtStaffEmail" id="txtStaffEmail" style="width: 95%" placeholder="Email có dạng abc@xyz.mn..." />
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-5">
                                    <b>Địa chỉ<b style="color: #ff0000">*</b>:</b>
                                </div>
                                <div class="col-xs-7">
                                    <textarea name="txtStaffAddress" id="txtStaffAddress" maxlength="200" rows="3" style="width: 95%"></textarea>
                                </div>
                            </div>
                            <div class="row" style="margin-bottom: 17px;">
                                <div class="col-xs-12">
                                    <b><b style="color: #ff0000">*</b>: Thông tin bắt buộc</b>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="box box-footer">

                        <!-- "Thêm mới" button -->
                        <button class="btn btn-primary pull-right" style="margin-right: 2%; margin-bottom: 2%" onclick="addStaff()">
                            <i class="fa fa-edit" style="margin-right: 3px;"></i>Thêm mới
                            <script type="text/javascript">
                                function addStaff() {
                                    var staffName = $("#txtStaffName").val();
                                    var staffUserAccount = $("#txtStaffUserAccount").val();
                                    var staffPhoneNumber = $("#txtStaffPhoneNumber").val();
                                    var staffEmail = $("#txtStaffEmail").val();
                                    var staffAddress = $("#txtStaffAddress").val();

                                    if (staffName.trim() === '') {
                                        noty({
                                            text: 'Tên nhân viên không được trống.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    } else if (staffUserAccount.trim() === '') {
                                        noty({
                                            text: 'Tên tài khoản của nhân viên không được trống.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    } else if (staffPhoneNumber.trim() === '') {
                                        noty({
                                            text: 'Số điện thoại của không được trống.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });

                                    } else if (isNaN(staffPhoneNumber)) {
                                        noty({
                                            text: 'Số điện thoại nhân viên không đúng.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    } else if (!new RegExp(/^\d{10,11}$/).test(staffPhoneNumber)) {
                                        noty({
                                            text: 'Hãy nhập số điện thoại đúng.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                        $("#txtStaffPhoneNumber").focus();
                                    } else if (staffEmail.trim() === '') {
                                        noty({
                                            text: 'Địa chỉ E-mail của nhân viên không được trống.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    } else if (!new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i).test(staffEmail)) {
                                        noty({
                                            text: 'Hãy nhập email đúng định dạng.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                        $("#txtStaffEmail").focus();

                                    } else if (staffAddress.trim() === '') {
                                        noty({
                                            text: 'Địa chỉ của nhân viên không được trống.',
                                            type: 'warning',
                                            dismissQueue: false,
                                            layout: 'topCenter',
                                            theme: 'defaultTheme',
                                            timeout: 1000
                                        });
                                    } else {
                                        $.ajax({
                                            url: "@(Url.Action("CheckStaffInfo", "Staff"))",
                                            method: "POST",
                                            data: $("#add-staff-form").serialize(),
                                            success: function (data) {
                                                if (data === '1') {
                                                    noty({
                                                        text: 'Tên tài khoản này đã có trong hệ thống.',
                                                        type: 'warning',
                                                        dismissQueue: false,
                                                        layout: 'topCenter',
                                                        theme: 'defaultTheme',
                                                        timeout: 1000
                                                    });
                                                    $("#txtStaffUserAccount").focus();
                                                } else if (data === '2') {
                                                    noty({
                                                        text: 'Số điện thoại này đã có trong hệ thống.',
                                                        type: 'warning',
                                                        dismissQueue: false,
                                                        layout: 'topCenter',
                                                        theme: 'defaultTheme',
                                                        timeout: 1000
                                                    });
                                                    $("#txtStaffPhoneNumber").focus();
                                                } else if (data === '3') {
                                                    noty({
                                                        text: 'Địa chỉ E-mail này đã có trong hệ thống.',
                                                        type: 'warning',
                                                        dismissQueue: false,
                                                        layout: 'topCenter',
                                                        theme: 'defaultTheme',
                                                        timeout: 1000
                                                    });
                                                    $("#txtStaffEmail").focus();
                                                } else if (data === '0') {
                                                    $.ajax({
                                                        url: "@(Url.Action("AddStaff", "Staff"))",
                                                        method: "POST",
                                                        data: $("#add-staff-form").serialize(),
                                                        success: function (data) {
                                                            if (data === "1") {
                                                                noty({
                                                                    text: 'Thêm nhân viên mới thành công',
                                                                    type: 'success',
                                                                    dismissQueue: false,
                                                                    layout: 'topCenter',
                                                                    theme: 'defaultTheme',
                                                                    timeout: 1000
                                                                });
                                                                window.setTimeout(function () {
                                                                    window.location.replace("@(Url.Action("StaffIndex", "Staff"))");
                                                                }, 4000);
                                                            } else {
                                                                noty({
                                                                    text: 'Không thể thêm nhân viên mới',
                                                                    type: 'warning',
                                                                    dismissQueue: false,
                                                                    layout: 'topCenter',
                                                                    theme: 'defaultTheme',
                                                                    timeout: 1000
                                                                });
                                                            }
                                                        },
                                                        fail: function () {
                                                            noty({
                                                                text: 'Đã có lỗi xảy ra',
                                                                type: 'error',
                                                                dismissQueue: false,
                                                                layout: 'topCenter',
                                                                theme: 'defaultTheme',
                                                                timeout: 1000
                                                            });
                                                        }
                                                    });
                                                }
                                            },
                                            fail: function () {
                                                noty({
                                                    text: 'Đã có lỗi xảy ra.',
                                                    type: 'danger',
                                                    dismissQueue: false,
                                                    layout: 'topCenter',
                                                    theme: 'defaultTheme',
                                                    timeout: 1000
                                                });
                                            }
                                        });
                                    }
                                }

                            </script>
                        </button>
                        <!-- "Hủy" button -->
                        <button class="btn btn-success" style="margin-left: 2%; margin-bottom: 2%" onclick="cancelAddStaff()">
                            <i class="fa fa-arrow-left" style="margin-right: 3px;"></i>Quay lại trang danh sách
                            <script type="text/javascript">
                                function cancelAddStaff() {
                                    window.location.replace("@(Url.Action("StaffIndex", "Staff"))");
                                    window.location.replace("@(Url.Action("StaffIndex", "Staff"))");
                                }
                            </script>
                        </button>

                    </div>
                </div>

            </div>
            <div class="col-md-3">
            </div>
        </div>

    </div>
    <!--max length for number-->
    <script>
        function maxLengthCheck(object) {
            if (object.value.length > object.maxLength)
                object.value = object.value.slice(0, object.maxLength);
        }
    </script>
</section>