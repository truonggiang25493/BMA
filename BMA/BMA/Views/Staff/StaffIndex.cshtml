@using BMA.Models
@model IEnumerable<BMA.Models.Staff>
@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<section class="content-header">
    <h1>Danh sách nhân viên</h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <div class="box-header clearfix">
            <a class="btn btn-info pull-left" href="@(Url.Action("AddStaff", "Staff"))">
                <i class="fa fa-plus" style="margin-right: 3px"></i>
                Thêm nguyên liệu đầu vào mới
            </a>
        </div>
        <!-- box-body -->
        <div class="box-body">
            <table id="example2" class="table table-hover table-bordered">
                <thead style="font-weight: bold">
                <tr>

                    <th>Tên nhân viên</th>
                    <th>Tên tài khoản</th>
                    <th>Số điện thoại</th>
                    <th>Trạng thái</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (Staff staff in Model)
                {
                    <tr>

                        <td>@staff.User.Fullname</td>
                        <td>@staff.User.Username</td>
                        <td>@staff.StaffPhoneNumber</td>
                        @if (staff.IsActive)
                        {
                            <td>
                                <span class="label label-success">Đang hoạt động</span>
                            </td>
                            <td>
                                <a class="btn btn-link btn-xs" href="@(Url.Action("StaffDetail", "Staff", new {id = staff.StaffId}))" data-toggle="tooltip" data-placement="top" title="Xem">
                                    <i class="fa fa-navicon" style="margin-right: 3px"></i>
                                </a>
                                <button class="btn btn-link btn-xs" onclick="open_container(@(staff.StaffId));" data-toggle="tooltip" data-placement="top" title="Thay đổi trạng thái">
                                    <i class="fa fa-refresh" style="margin-right: 3px"></i>
                                    <script type="text/javascript">
                                        function open_container(id) {
                                            var content = $("<div>", {
                                                "html": "Bạn có muốn thay đổi trạng thái của nhà cung cấp từ trạng thái  " + "@Html.Raw(staff.IsActive ? "<span class='label label-success'>Đang hoạt động</span>" : "<span class='label label-danger'>Ngừng hoạt động</span>")" + "  sang trạng thái  " + "@Html.Raw(staff.IsActive ? "<span class='label label-danger'>Ngừng hoạt động</span>" : "<span class='label label-success'>Đang hoạt động</span>")" + "  không?"
                                            });

                                            var title = 'Thay đổi trạng thái nguyên liệu';
                                            var footer = $("<div>", {
                                                "class": "row",
                                                "html": [
                                                    $("<button>", {
                                                        "class": "btn btn-success pull-right",
                                                        "style": "margin-right: 30%;",
                                                        "onclick": "change_staff_status(" + id + ")",
                                                        "html": "Đồng ý"
                                                    }),
                                                    $("<button>", {
                                                        "class": "btn btn-danger",
                                                        "style": "margin-right: 10px;",
                                                        "data-dismiss": "modal",
                                                        "html": "Hủy"
                                                    })
                                                ]
                                            });
                                            setModalBox(title, content[0].outerHTML, footer[0].outerHTML);
                                            $('#myModal').modal('show');
                                        }

                                        function setModalBox(title, content, footer) {
                                            document.getElementById('popup-body').innerHTML = content;
                                            document.getElementById('popup-title').innerHTML = title;
                                            document.getElementById('popup-footer').innerHTML = footer;
                                        }

                                        function change_staff_status(id) {
                                            $.ajax({
                                                "url": "@(Url.Action("ChangeStaffStatus", "Staff"))",
                                                "method": "POST",
                                                "data": {
                                                    "id": id
                                                },
                                                "success": function (data) {
                                                    if (data === "1") {
                                                        $('#myModal').modal('hide');
                                                        window.location.replace("@Url.Action("StaffIndex", "Staff", staff.StaffId)");
                                                    } else {
                                                        alert("Khong the");
                                                    }
                                                },
                                                "fail": function (e) {
                                                    alert("Have error" + e);
                                                }
                                            });
                                        }
                                    </script>
                                </button>
                            </td>
                        }
                        else
                        {
                            <td>
                                <span class="label label-danger">Ngừng hoạt động</span>
                            </td>
                            <td>
                                <a class="btn btn-link btn-xs" href="@(Url.Action("StaffDetail", "Staff", new {id = staff.StaffId}))" data-toggle="tooltip" data-placement="top" title="Xem">
                                    <i class="fa fa-navicon" style="margin-right: 3px"></i>
                                </a>
                                <button class="btn btn-link btn-xs" onclick="open_container(@(staff.StaffId));" data-toggle="tooltip" data-placement="top" title="Thay đổi trạng thái">
                                    <i class="fa fa-refresh" style="margin-right: 3px"></i>
                                    <script type="text/javascript">
                                        function open_container(id) {
                                            var content = $("<div>", {
                                                "html": "Bạn có muốn thay đổi trạng thái của nhà cung cấp từ trạng thái  " + "@Html.Raw(staff.IsActive ? "<span class='label label-success'>Đang hoạt động</span>" : "<span class='label label-danger'>Ngừng hoạt động</span>")" + "  sang trạng thái  " + "@Html.Raw(staff.IsActive ? "<span class='label label-danger'>Ngừng hoạt động</span>" : "<span class='label label-success'>Đang hoạt động</span>")" + "  không?"
                                            });

                                            var title = 'Thay đổi trạng thái nhân viên';
                                            var footer = $("<div>", {
                                                "class": "row",
                                                "html": [
                                                    $("<button>", {
                                                        "class": "btn btn-success pull-right",
                                                        "style": "margin-right: 30%;",
                                                        "onclick": "change_staff_status(" + id + ")",
                                                        "html": "Đồng ý"
                                                    }),
                                                    $("<button>", {
                                                        "class": "btn btn-danger",
                                                        "style": "margin-right: 10px;",
                                                        "data-dismiss": "modal",
                                                        "html": "Hủy"
                                                    })
                                                ]
                                            });
                                            setModalBox(title, content[0].outerHTML, footer[0].outerHTML);
                                            $('#myModal').modal('show');
                                        }

                                        function setModalBox(title, content, footer) {
                                            document.getElementById('popup-body').innerHTML = content;
                                            document.getElementById('popup-title').innerHTML = title;
                                            document.getElementById('popup-footer').innerHTML = footer;
                                        }

                                        function change_staff_status(id) {
                                            $.ajax({
                                                "url": "@(Url.Action("ChangeStaffStatus", "Staff"))",
                                                "method": "POST",
                                                "data": {
                                                    "id": id
                                                },
                                                "success": function(data) {
                                                    if (data === "1") {
                                                        $('#myModal').modal('hide');
                                                        window.location.replace("@Url.Action("StaffIndex", "Staff", staff.StaffId)");
                                                    } else {
                                                        alert("Khong the");
                                                    }
                                                },
                                                "fail": function(e) {
                                                    alert("Have error" + e);
                                                }
                                            });
                                        }
                                    </script>
                                </button>
                            </td>
                        }
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <div class="box-footer clearfix">
            <a class="btn btn-info pull-left" href="@(Url.Action("AddStaff", "Staff"))">
                <i class="fa fa-plus" style="margin-right: 3px"></i>
                Thêm nguyên liệu đầu vào mới
            </a>
        </div>
    </div>
</section>
