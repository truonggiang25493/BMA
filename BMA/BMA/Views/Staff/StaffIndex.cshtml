@using BMA.Models
@model IEnumerable<BMA.Models.Staff>
@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Layout/ManageLayout.cshtml";
}

<section class="content-header">
    <h1>Danh sách nhân viên</h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="box">
        <!-- box-body -->
        <div class="box-body">
            <table id="example2" class="table table-hover table-bordered">
                <thead style="font-weight: bold">
                    <tr>

                        <th>Tên nhân viên</th>
                        <th>Tên tài khoản</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Staff staff in Model)
                    {
                        <tr>

                            <td>@staff.User.Fullname</td>
                            <td>@staff.User.Username</td>
                            <td>@staff.StaffPhoneNumber</td>
                            @if (staff.IsActive)
                            {
                                <td>
                                    <span class="label label-success">Đang hoạt động</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "StaffDetail", new { id = staff.StaffId })
                                </td>
                            }
                            else
                            {
                                <td>
                                    <span class="label label-danger">Ngừng hoạt động</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Xem", "StaffDetail", new { id = staff.StaffId })
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>